package com.sleepydesign.system{	import flash.display.LoaderInfo;	import flash.events.ErrorEvent;	import flash.events.UncaughtErrorEvent;	public class ErrorUtil	{		public static function initGlobalError(loaderInfo:LoaderInfo, callback:Function = null):void		{			loaderInfo.uncaughtErrorEvents.addEventListener(UncaughtErrorEvent.UNCAUGHT_ERROR, (callback is Function ? callback : onUncaughtError));		}		private static function onUncaughtError(e:UncaughtErrorEvent):void		{			if (e.error is Error)			{				const error:Error = e.error as Error;				doTrace(error.errorID, error.name, error.message);			}			else			{				const errorEvent:ErrorEvent = e.error as ErrorEvent;				doTrace(errorEvent.errorID);			}		}	}}function doTrace(... args):void{	trace.apply(this, args);}